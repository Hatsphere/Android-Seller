<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yashladha.android_seller.navigation.ChangePassword">

    <LinearLayout

        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Old Password"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/etOldPassword"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.8"
                android:background="@drawable/button_border"
                android:hint="Enter your previous password"
                android:padding="10dp"
                android:textColorHint="#887f7f" />

            <Button
                android:id="@+id/btCheckPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/button_rounded_corners_gradiant"
                android:backgroundTint="#2867a5"
                android:paddingLeft="3dp"
                android:paddingRight="5dp"
                android:text="Check"
                android:textAllCaps="false"
                android:textColor="#fff" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="New Password"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/etNewPassword"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.8"
                android:background="@drawable/button_border"
                android:hint="Enter your new password"
                android:padding="10dp"
                android:textColorHint="#887f7f" />

            <ImageButton
                android:id="@+id/ibNewPassword"
                android:layout_height="42dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_eye" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Confirm Password"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/etConfirmPassword"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.8"
                android:background="@drawable/button_border"
                android:hint="Confirm your new password"
                android:padding="10dp"
                android:textColorHint="#887f7f" />

            <ImageButton
                android:id="@+id/ibPassword"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_eye" />
        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:orientation="horizontal">

        <Button
            android:id="@+id/btDone"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:textColor="#000"
            android:textAllCaps="false"
            android:background="@drawable/button_rounded_corners_gradiant"
            android:enabled="false"
            android:text="Change" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:enabled="false"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:id="@+id/btProceed"
        android:text="Proceed"
        android:backgroundTint="#1565c0"
        android:background="@drawable/button_rounded_corners_gradiant"/>
</LinearLayout>
    </LinearLayout>


</RelativeLayout>
